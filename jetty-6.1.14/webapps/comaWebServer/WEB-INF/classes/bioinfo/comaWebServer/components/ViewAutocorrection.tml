<t:container xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

<t:if t:test="showAutocorrection">
	<table class="editComaParams">
		<tr>
			<td class="left">
			    <a name="autocorrection_numerator_1" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#autocorrection_numerator_1');" href="#autocorrection_numerator_1">
                    ${message:lc_k}
                </a>
			</td>
			<td class="right">
				<t:textfield t:id="lc_k" t:value="autocorrection.lc_k" t:validate="required"/>
			</td>
		</tr>
		<tr>
			<td class="left">
				<a name="autocorrection_numerator_2" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#autocorrection_numerator_2');" href="#autocorrection_numerator_2">
                    ${message:uc_K}
                </a>
			</td>
			<td class="right">
				<t:textfield t:id="uc_K" t:value="autocorrection.uc_K" t:validate="required"/>
			</td>
		</tr>
		<tr>
			<td class="left">
				<a name="autocorrection_logarithmic_scale_2" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#autocorrection_logarithmic_scale_2');" href="#autocorrection_logarithmic_scale_2">
                    ${message:lc_m}
                </a>
			</td>
			<td class="right">
				<t:textfield t:id="lc_m" t:value="autocorrection.lc_m" t:validate="required"/>
			</td>
		</tr>
		<tr>
			<td class="left">
				<a name="autocorrection_denominator_2" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#autocorrection_denominator_2');" href="#autocorrection_denominator_2">
                    ${message:uc_M}
                </a>
			</td>
			<td class="right">
				<t:textfield t:id="uc_M" t:value="autocorrection.uc_M" t:validate="required"/>
			</td>
		</tr>
		<tr>
			<td class="left">
				<a name="autocorrection_positional_corrections" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#autocorrection_positional_corrections');" href="#autocorrection_positional_corrections">
                    ${message:lc_p}
                </a>
			</td>
			<td class="right">
				<input type="checkbox" t:type="checkbox" t:value = "autocorrection.lc_p"/>
			</td>
		</tr>
		<tr>
			<td class="left">
				<a name="autocorrection_do_not_compute_any_corrections" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#autocorrection_do_not_compute_any_corrections');" href="#autocorrection_do_not_compute_any_corrections">
                    ${message:lc_a}
                </a>
			</td>
			<td class="right">
				<input type="checkbox" t:type="checkbox" t:value = "autocorrection.lc_a"/>
			</td>
		</tr>
	</table>
</t:if>

</t:container>