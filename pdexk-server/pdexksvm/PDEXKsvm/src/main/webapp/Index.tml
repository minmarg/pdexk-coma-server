<html t:type="layout" title="PDEXK"
      t:sidebarTitle="Current Time"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
        <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->
        
        <div class="header">
            <a name="input" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#input');" href="#input">
              Input
            </a>
        </div>
        
        <t:form t:id="submitJobForm">
            <t:errors/>

            <table>
                <tr>
                    <td class="left">
                        <a name="paste_sequence" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#paste_sequence');" href="#paste_sequence">
                          Paste protein sequence or multiple alignment
                        </a>
                    </td>
                    <td class="right">
                        <t:textarea t:id="sequence" t:value="sequence" t:validate="maxlength" wrap="off"/>
                    </td> 
                </tr>   
                <tr>
                    <td class="left">
                        <a name="upload_local" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#upload_local');" href="#upload_local">
                          Upload a local file
                        </a>
                    </td>
                    <td class="right">
                        <input t:type="upload" t:id="file" t:value="file"/>
                    </td>
                </tr>
                <tr>
                    <td class="left">
                        <a name="input_type" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#input_type');" href="#input_type">
                          Input type
                        </a>
                    </td>
                    <td class="right">
                        <t:select t:model="types" t:id="inputType" t:value="type" t:validate="required"/>
                    </td>
                </tr>
                <tr>
                    <td class="left">
                        <a name="email_results_to" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#email_results_to');" href="#email_results_to">
                          E-mail results to
                        </a> 
                    </td>
                    <td class="right">
                        <t:textfield t:id="email" t:value="email"/>
                    </td>
                </tr>
                <tr>
                    <td class="left">
                        <a name="job_description" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#job_description');" href="#job_description">
                          Job description (max 20 characters)
                        </a> 
                    </td>
                    <td class="right">
                        <t:textfield t:id="description" t:value="description" t:validate="maxlength" maxlength="20"/>
                    </td>
                </tr>
                <tr>
                   <td class="left">
                   </td>
                   <td class="right">
                        <input type="submit" t:type="submit" t:id="newJobButton" id="newJobButton" value="Submit Job" style="width: 150px;"/>
                        <input type="submit" t:type="submit" t:id="resetButton" value="Reset" style="width: 150px;"/>
                   </td>
                </tr> 
            </table>
            
            <div class="header">
	            <a name="input" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#input');" href="#construction_msa">
	              Construction of multiple sequence alignment using PSI-BLAST
	            </a>
            </div>
            
            <t:radiogroup value="searchStrategy">
	            <table>
	                <tr>
		                <td class="left">
		                    <a name="do_not_run_psiblast" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#do_not_run_psiblast');" href="#do_not_run_psiblast">
		                        Do not run PSI-BLAST (use my input multiple alignment) 
		                    </a>
		                </td>
		                <td class="right">
		                   <t:radio t:id="noPsiblast" id="noPsiblast"/>
		                </td>
		            </tr>
		            <tr>
                        <td class="left">
		                    <a name="server_handle" onclick="openHelpWindow('${asset:context:/static_pages/help.html}#server_handle');" href="#server_handle">
		                        Let the server handle PSI-BLAST run 
		                    </a>
		                </td>
		                <td class="right">
		                   <t:radio t:id="serverHandle" id="serverHandle"/>               
		                </td>
                    </tr>
	            </table>
            </t:radiogroup>

        </t:form>

</html>
