<t:border t:pageTitle="Edit COMA Params" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
    <head>

    </head>
    <body>
    	<t:form t:id="updateCOMAParamsForm" clientValidation="false">
    		<t:errors/>
    		
            <table class="editComaParams">
                <tr>
                   <td class="left">
                   		<h3>Edit COMA params</h3>
                   </td>
                   <td class="right">
                   </td>
                </tr>  
            </table> 

			<t:ViewComaParams autocorrection="comaParams.autocorrection"
							  alignment="comaParams.alignment"
							  output="comaParams.output"
							  profileConstruction="comaParams.profileConstruction"
							  masking="comaParams.masking"
							  seg="comaParams.seg"
							  gapProbability="comaParams.gapProbability"
							  informationCorrection="comaParams.informationCorrection"
							  alignmentDB="alignmentDB"
                              selectedAlignmentDB="selectedAlignmentDB"
                              alignmentFilter="comaParams.alignmentFilter"
                              segmentPairs="comaParams.segmentPairs"/>
							  
            <table class="editComaParams">
                <tr>
                   <td class="left">
                   </td>
                   <td class="right">
                      <input type="submit" t:type="submit" class="button" t:id="updateComaParamsButton" value="Save"/>
                   </td>
                </tr>  
            </table> 
    	</t:form>
    </body>
</t:border>
